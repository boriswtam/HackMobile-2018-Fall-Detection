<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="testing.gps_location.MainActivity">

    <TextView
        android:id="@+id/fall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fall Detected !!!!"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/okay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you okay ?"
        android:layout_below="@id/fall"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:layout_below="@id/okay"
        android:textSize="24sp"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:layout_below="@id/button1"
        android:textSize="24sp"
        />

        <TextView
            android:id="@+id/scord"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Coordinates: "
            android:textSize="30sp"
            android:layout_below="@id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/cord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordinates Lat"
        android:layout_below="@id/scord"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/cord1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordinates Long"
        android:layout_below="@id/cord"
        android:textSize="24sp"
        />
</RelativeLayout>
